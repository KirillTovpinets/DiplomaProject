                {
                    numCourseThree++;
                }
            }
            if (numCourseThree != 0)
            {
                <span>(@numCourseThree)</span>
            }
        }
    </a>
    <a class="choose-buttons" href="~/Profile/CourseFourMess">
        4 курс
        @{
            foreach (HtmlInputs.Models.Messages item in dc.Messages)
            {
                if (item.isRead == 0 &&
                    item.Users.Course == 4 &&
                    item.ReceiverId == Convert.ToInt32(Session["LogedUserId"]))
                {
                    numCourseFour++;
                }
            }
            if (numCourseFour != 0)
            {
                <span>(@numCourseFour)</span>
            }
        }
    </a>
</div>
